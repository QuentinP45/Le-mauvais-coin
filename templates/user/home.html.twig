{% extends 'base.html.twig' %}
 
{% block body %}

    {% include "user/navbar.html.twig" %}

    <div class="row text-center">
        <div class="col-sm-8 offset-sm-2">
            <p>Bienvenue {% if app.user.username is defined %}{{ app.user.username }} {% endif %}, vous Ãªtes sur la partie accueil</p>
        </div>
    </div>

    {{ include('user/searchbar.html.twig') }}

    <div class="row">
        {% if offers is defined %}
        {% for offer in offers %}
            <div class="col-sm-4 col-md-3">
                <img src="http://via.placeholder.com/350x150" alt="Avatar" style="width:100%">
                <div class="">
                    <h4><b>{{ offer.title }}</b></h4>
                    <p>{{ offer.details }}</p>
                </div>
            </div>
        {% endfor %}
        {% elseif searchOffers is defined %}
        {% for searchOffer in searchOffers %}
            <div class="col-sm-4 col-md-3">
                <img src="http://via.placeholder.com/350x150" alt="Avatar" style="width:100%">
                <div class="">
                    <h4><b>{{ searchOffer.title }}</b></h4>
                    <p>{{ searchOffer.details }}</p>
                </div>
            </div>
        {% endfor %}
        {% endif %}
    </div>

{% endblock %}